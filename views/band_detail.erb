<h1>Band: <%= @band.name %></h1>
<br>
<form action="/bands/<%= @band.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input id="name" name="name" type="text">

  <button type="submit" class="btn btn-info btn-xs">Rename band: <%=@band.name() %></button>
</form>
<br>
<br>
<form action='/bands/<%= @band.id() %>/delete' method='post'>
  <input type="hidden" name='_method' value='delete'>
  <button type='submit' class="btn btn-warning btn-xs">Delete band: <%= @band.name %></button>
</form>
<br>
<a href="/" class="btn btn-success btn-xs">Back to Homepage</a>
